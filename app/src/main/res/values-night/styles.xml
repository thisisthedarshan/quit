<!--    Styling for Night or Dark Mode  -->
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/eerie_black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="customBackground">@drawable/navbar_night</item>
        <item name="viewBackground">@color/light_sea_green</item>
        <item name="customColor">@color/white</item>
        <item name="colHighlight">@color/spring_bud_green</item>
        <item name="fragmentCol">@color/black</item>
        <item name="fragmentBck">@drawable/frag_nit</item>
        <item name="fragmentInv">@color/white</item>
    </style>

    <style name="AppTheme.ThemeNav" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">@color/menu_itm_col_blk</item>
        <item name="itemTextColor">@color/menu_itm_col_blk</item>
        <item name="itemBackground">@drawable/menu_itm_state_blk</item>
    </style>

</resources>
